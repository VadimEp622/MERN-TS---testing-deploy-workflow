{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "rootDir": "./",
        "outDir": "./dist",
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "allowJs": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
    "ts-node": {
        "esm": true, // «———— enabling ESM for ts-node
    },
}